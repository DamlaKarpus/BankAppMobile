<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Fragment -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.damlakarpus.bankappmobile.ui.splash.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.damlakarpus.bankappmobile.ui.login.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <!-- Register Fragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.damlakarpus.bankappmobile.ui.register.RegisterFragment"
        android:label="Register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.damlakarpus.bankappmobile.ui.dashboard.DashboardFragment"
        android:label="Dashboard">
        <!-- Dashboard -> Transaction Fragment Action -->
        <action
            android:id="@+id/action_dashboardFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />

        <!-- Dashboard -> AllTransactions Fragment Action -->
        <action
            android:id="@+id/action_dashboardFragment_to_allTransactionsFragment"
            app:destination="@id/allTransactionsFragment" />

        <!-- Dashboard -> Chat Fragment Action -->
        <action
            android:id="@+id/action_dashboardFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

    <!-- Transaction Fragment -->
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.damlakarpus.bankappmobile.ui.transaction.TransactionFragment"
        android:label="Transaction" />

    <!-- All Transactions Fragment -->
    <fragment
        android:id="@+id/allTransactionsFragment"
        android:name="com.damlakarpus.bankappmobile.ui.transaction.AllTransactionsFragment"
        android:label="Tüm İşlemler"
        tools:layout="@layout/fragment_all_transactions" />

    <!-- Chat Fragment -->
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.damlakarpus.bankappmobile.ui.chat.ChatFragment"
        android:label="ChatBot"
        tools:layout="@layout/fragment_chat">

        <!-- Chat -> Transaction Fragment Action -->
        <action
            android:id="@+id/action_chatFragment_to_transactionFragment"
            app:destination="@id/transactionFragment" />

        <!-- Chat -> AllTransactions Fragment Action -->
        <action
            android:id="@+id/action_chatFragment_to_allTransactionsFragment"
            app:destination="@id/allTransactionsFragment" />
    </fragment>

</navigation>
